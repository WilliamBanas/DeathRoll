{
	"compilerOptions": {
		"module": "CommonJS",
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"target": "ES2020",
		"sourceMap": true,
		"outDir": "dist",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"resolveJsonModule": true,
		"typeRoots": ["./src/types", "./node_modules/@types"]
	},
	"include": ["src/**/*"],
}
